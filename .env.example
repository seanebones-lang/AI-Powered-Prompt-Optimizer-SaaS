# AI-Powered Prompt Optimizer - Environment Variables
# Copy this file to .env and fill in your values

# ===================
# REQUIRED
# ===================

# xAI Grok API Key (get from https://console.x.ai)
XAI_API_KEY=xai-your-api-key-here

# Secret key for session encryption
# Generate with: python -c "import secrets; print(secrets.token_hex(32))"
SECRET_KEY=your-secret-key-minimum-32-characters

# Database URL
# PostgreSQL (production): postgresql://user:password@localhost:5432/prompt_optimizer
# SQLite (development): sqlite:///./app.db
DATABASE_URL=sqlite:///./app.db

# ===================
# STRIPE PAYMENTS (required for paid tiers)
# ===================

# Stripe API Keys (https://dashboard.stripe.com/apikeys)
STRIPE_SECRET_KEY=sk_test_xxxxxxxxxxxxxxxxxxxx
STRIPE_PUBLISHABLE_KEY=pk_test_xxxxxxxxxxxxxxxxxxxx
STRIPE_WEBHOOK_SECRET=whsec_xxxxxxxxxxxxxxxxxxxx

# Stripe Price IDs (create products in Stripe Dashboard)
STRIPE_PRICE_ID_PRO=price_xxxxxxxxxxxxxxxxxxxx
STRIPE_PRICE_ID_ENTERPRISE=price_xxxxxxxxxxxxxxxxxxxx

# ===================
# OPTIONAL
# ===================

# Application Environment
ENVIRONMENT=development
DEBUG=true
LOG_LEVEL=INFO

# Sentry Error Tracking (https://sentry.io)
# SENTRY_DSN=https://xxxx@sentry.io/xxxx

# Redis Caching (recommended for production)
# REDIS_URL=redis://localhost:6379/0

# Agentic RAG (experimental feature)
ENABLE_AGENTIC_RAG=false

# xAI Collections API (for document search)
ENABLE_COLLECTIONS=false
# COLLECTION_ID_PROMPT_EXAMPLES=col_xxxx
# COLLECTION_ID_MARKETING=col_xxxx
# COLLECTION_ID_TECHNICAL=col_xxxx

# ===================
# MODEL CONFIGURATION
# ===================

# xAI Model (default: grok-4-1-fast-reasoning)
XAI_MODEL=grok-4-1-fast-reasoning
XAI_API_BASE=https://api.x.ai/v1

# Rate Limits
FREE_TIER_DAILY_LIMIT=5
PAID_TIER_DAILY_LIMIT=1000
